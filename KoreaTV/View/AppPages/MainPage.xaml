<Page
    x:Class="KoreaTV.View.AppPages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:KoreaTV.View.AppPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
    mc:Ignorable="d">

    <NavigationView
        BackRequested="NavigationView_BackRequested"
        IsBackEnabled="{Binding ElementName=frameContent, Path=CanGoBack}"
        PaneDisplayMode="Auto">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="韩剧" Icon="Home" />
            <NavigationViewItem Content="明星" Icon="SolidStar" />
            <NavigationViewItem Content="短视频" Icon="Video" />
        </NavigationView.MenuItems>
        <Grid>
            <Frame x:Name="frameContent" SourcePageType="{Binding FramePage, Mode=TwoWay}" />
        </Grid>
    </NavigationView>
</Page>
